@model Bordspil.Models.User

@{
    ViewBag.Title = "Details";
}

<div class="grid_2"><img src="@Model.ProfilePicUrl" class="user-detail-image"></div>

<div class="grid_4">
    

    <h1>@Html.DisplayFor(m => m.UserName)</h1>
    <div class="user-detail-item">
        <span class="user-detail-item-label">Stig</span>
        <span class="user-detail-item-value">@Html.DisplayFor(model => model.Points)</span>
    </div>

    @if(@Model.UserName.ToString() == @HttpContext.Current.User.Identity.Name)
    {
        @Html.ActionLink("Breyta stillingum","Details", new { id = Model.UserID }, htmlAttributes: new { @class = "all-buttons" }) 
    }

    @Html.ActionLink("Notendalisti", "Index", "Users", null, htmlAttributes: new { @class = "all-buttons" })

</div>
<div class="clear"></div>

