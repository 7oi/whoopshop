@model Bordspil.Models.LocalPasswordModel

<h3>Breyta lykilorði</h3>

@using (Html.BeginForm("Manage", "Users")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset class="login-input-boxes-single">
        <legend></legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.OldPassword)
                @Html.PasswordFor(m => m.OldPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <div class="hreinsarinn"></div>
        <input type="submit" value="Breyta lykilorði" class="all-buttons login-register-submit-single" />
    </fieldset>
}
