@model IEnumerable<Bordspil.Models.GameType>
@{
    ViewBag.Title = "Borðspil.is";
}
@section featured {
    <section>
        <div>
            <hgroup>
                <h1>@ViewBag.Title</h1>
            </hgroup>
            <div class="front-page-text">
            <p>
                Spilaðu frábær borðspil við vini þína og alla hina sem eru á internetinu. 
                Þú getur skoðað leiki hérna fyrir neðan. Skráðu þig inn til að vera með!
            </p>
            </div>
            
                <div> 
                    <ul class="list-front-page">
                    <li class="buttons-front-page">@Html.ActionLink("Skoða aðra notendur", "Index", "Users")</li>
                    </ul>
            @if (User.Identity.Name == "")
            {
                    <ul class="list-front-page">
                        <li class="buttons-front-page">@Html.ActionLink("Nýskrá", "Register", "Users", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                        <li class="buttons-front-page">@Html.ActionLink("Innskráning", "Login", "Users", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                    </ul>
            }
                </div>
            
            
        </div>
        <div class="hreinsarinn">

        </div>
    </section>
    <div>
        @foreach (var item in Model)
        {
            <div class="leikur">
                <a href="@Url.Action("Game", "Game", new { name = item.gameTypeName})"><img src="@item.gameTypeImgUrl" /></a>
            </div>
        }
    </div>
    <div class="hreinsarinn">

    </div>            
}
