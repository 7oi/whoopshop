<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div>
                <div>
                    <p>@Html.ActionLink("your logo here", "Index", "Home")</p>
                </div>
                <div>
                    <section>
                        <ul>
                            <li>@Html.ActionLink("Heim", "Index", "Home")</li>
                            <li> @Html.Partial("_LoginPartial")</li>
                        </ul>
                    </section>
                    <nav>
                        <ul>
                            <li>@Html.ActionLink("Hafa samband", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Leikir", "Game", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section>
                @RenderBody()
            </section>
        </div>
        <footer>
            <div>
                <div>
                    <p>&copy; @DateTime.Now.Year - My ASS</p>
                    @Html.ActionLink("Um borðspil", "About", "Home")
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        <script src="~/Scripts/jquery.signalR-1.0.1.js"></script>
        @Scripts.Render("~/signalr/hubs")
        @RenderSection("scripts", required: false)
    </body>
</html>
